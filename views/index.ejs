<% include header %>
<div class="container">
    <h1><%=title%></h1>
    <form class="form-horizontal has-feedback" role="form">
        <div class="row">
            <div class="col-xs-12">
                <div class="has-feedback">
                    
                    <input class="form-control" name="val" type="text" pattern="[0-9]*"  placeholder="please enter a number" required autofocus>
                    
                    <i class="fa fa-2x form-control-feedback"></i>
                    </input>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <label for="from">from:</label>
                        <select name="from" id="from" class"form-control">
                            <% for (rate in rates) {
                            if (base === rate) {%>
                            <option selected="selected"><%= rate %></option>
                            <%} else {%>
                            
                            <option><%= rate %></option>
                            
                            <%}}; %>
                        </select>
                        
                    </div>
                    <div class="col-xs-6">
                        <label for="to">to:</label>
                        <select name="to" id="to" class"form-control">
                            <% for (rate in rates) { %>
                            console.log(rate);
                            <option><%= rate%></option>
                            
                            <% }; %>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Convert</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="has-feedback">
                            
                            <input class=" result form-control" type="value"  placeholder="result"/>
                             <i class="fa fa-2x form-control-feedback"></i>
                        </div>
                    </div>
                </div>
                
            </form>
            
            </div> <!-- /container -->
            <%include jquery %>
            <script src="/javascripts/main.js"></script>
            <% include footer %>